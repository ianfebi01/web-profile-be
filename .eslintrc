{
  // "env": {
  //   "browser": true,
  //   "es2021": true
  // },
  "root": true,
  // "extends": "standard-with-typescript",
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "env": {
        "node": true
      },
      "files": [
        "*.ts"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "parserOptions": {
        "project": [
          "./tsconfig.json"
        ]
      }
    }
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  // "parserOptions": {
  //   "ecmaVersion": "latest",
  //   "sourceType": "module"
  // },
  // "parserOptions": {
  //   "parser": "@typescript-eslint/parser",
  //   "project": "./tsconfig.json",
  //   "tsconfigRootDir": "__dirname",
  // },
  "rules": {
    "key-spacing": ["error", { "align": "colon" }]
  },
  "ignorePatterns": [
    "*!.*",
    "dist",
    "build",
    "node_modules"
  ]
}